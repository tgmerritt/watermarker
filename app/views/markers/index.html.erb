<div class="container">
  <!-- Example row of columns -->
  <%= form_for @marker do |m| %>
    <div class="row">
      <div class="col-md-4">
        <h2>Source Image</h2>

        <p>Select the file that you want to add a watermark to from the select box below.</p>
        <%= m.file_field :source %>
        <!--<p><a class="btn btn-secondary" href="#" role="button">View details &raquo;</a></p>-->
      </div>
      <div class="col-md-4">
        <h2>Watermark Image</h2>

        <p>Select the image you want to use as your watermark from the select box below. This is typically your
          corporate logo or some other text that will layer on top of the source image. </p>
        <%= m.file_field :watermark %>
        <!--<p><a class="btn btn-secondary" href="#" role="button">View details &raquo;</a></p>-->
      </div>
      <div class="col-md-4">
        <h2>Options</h2>
          <%= label(:marker, :watermark_position) %>
          <%= select_tag :location, options_for_select(["Upper-Left", "Upper-Right", "Lower-Left", "Lower-Right"], "Lower-Right"), class: "custom-select", name: "marker[location]", id: "marker_location" %>
	      <p></p>
	        <%= label(:marker, "Scale watermark down by (%)") %>
	        <%= select_tag :size, options_for_select((5..100).step(5), 60), class: "custom-select", name: "marker[size]", id: "marker_size"  %>

        <!--<a class="btn btn-success" href="#" role="button">Do Magick &raquo;</a></p>-->
      </div>
    </div>
    <div class="row" style="padding-top: 45px">
      <div class="col-md-4"></div>
      <div class="col-md-4">
        <h2>Do Magick!</h2>

        <p>Click the button below to watermark your image</p>

        <p class="center"><%= m.submit "Do Magick!", class: "btn btn-success" %>
      </div>

    </div>
    </div>
  <% end %>

